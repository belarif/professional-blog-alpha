{% extends 'template_backoffice.html.twig' %}

{% block title %} Créer un utilisateur  {% endblock title %}

{% block stylesheet %}
    <link href="public/css/backoffice/addUser.css" rel="stylesheet" />
{% endblock stylesheet %}

{% block content %}

    <main>
        <div class="container-fluid px-4">
            <h4 class="mt-4">Gestion des utilisateurs</h4>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="index.html">Tableau de bord</a></li>
                <li class="breadcrumb-item active">créer un utilisateur</li>
            </ol>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="me-1"></i>
                    Créer un utilisateur
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3 row">
                            <label for="familyName" class="col-sm-2 col-form-label">Nom</label>
                            <div class="col-sm-10">
                                <input id="familyName" class="form-control" type="text" name="familyName">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="firstName" class="col-sm-2 col-form-label">Prénom</label>
                            <div class="col-sm-10">
                                <input id="firstName" class="form-control" type="text" name="firstName">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="email" class="col-sm-2 col-form-label">E-mail</label>
                            <div class="col-sm-10">
                                <input id="email" class="form-control" type="text" name="email">
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label for="password" class="col-sm-2 col-form-label">Mot de passe</label>
                            <div class="col-sm-10">
                                <input id="password" class="form-control" type="text" name="password">
                            </div>
                        </div>
                        <div class="">
                            <button class="btn btn-primary">S'inscrire</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </main>

{% endblock content %}